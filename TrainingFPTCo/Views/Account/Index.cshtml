@model TrainingFPTCo.Models.AccountViewModel;
@{
    ViewData["title"] = "Account";
    ViewData["breadcrumb"] = "Home";
    ViewData["breadcrumb_active"] = "Account";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    bool statusAdd = Convert.ToBoolean(TempData["saveStatus"]);

}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>this is Account page</h2>
        <a class="btn btn-primary" href="@Url.Action("Add","Account")">Add new Account</a>
        <form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <input id="SearchString" value="@ViewData["currentFilter"]" type="text" name="SearchString" class="form-control" placeholder="Find by Name">
        </div>
       @*  <div class="col-md-3">
            <select id="statusSelect" name="FilterStatus" class="form-select">
                <option value="">- Status -</option>
                <option value="Activated" @(ViewBag.FilterStatus == "Activated" ? "selected" : "")>Activated</option>
                <option value="Deactive" @(ViewBag.FilterStatus == "Deactive" ? "selected" : "")>Deactive</option>
            </select>
        </div> *@
        <div class="col-md-3">
            <button id="searchButton" type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
    </div>
</div>
@if (TempData["saveStatus"] != null)
{
    @if (statusAdd)
    {
        <div class="text-success my-3"> Add Successfully </div>
    }
    else
    {
        <div class="text-danger my-3"> Add Failure </div>
    }
}
<div class="row mt-3 d-flex justify-content-center" >
            <table class="table table-striped table-hover mt-3" style="margin-left: 0;">
            <thead class="table-success">
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>User Name</th>
            <th>Extra Code</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Full Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthday</th>
            <th>Gender</th>
            <th>Education</th>
            <th>Programming Language</th>
            <th>TOEIC Score</th>
            <th>IP Client</th>
            <th>Last Login</th>
            <th>Last Logout</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
                @foreach (var acc in Model.AccountDetailList)
        {
            <tr>
                        <td>@acc.Id</td>
                    <td>@acc.ViewRoleName</td>
                        <td>@acc.UserName</td>
                        <td>@acc.ExtraCode</td>
                        <td>@acc.Email</td>
                        <td>@acc.Phone</td>
                        <td>@acc.Address</td>
                        <td>@acc.FullName</td>
                        <td>@acc.FirstName</td>
                        <td>@acc.LastName</td>
                        <td>@acc.Birthday</td>
                        <td>@acc.Gender</td>
                        <td>@acc.Education</td>
                        <td>@acc.ProgramingLanguage</td>
                        <td>@acc.ToeicScore</td>
                        <td>@acc.IPClient</td>
                        <td>@acc.LastLogin</td>
                        <td>@acc.LastLogout</td>
                        <td>@acc.CreatedAt</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Edit and Delete buttons">
                            <a href="@Url.Action("Update", "Account", new { id = acc.Id })" class="btn btn-primary btn-block">Edit</a>
                            <a href="@Url.Action("Delete", "Account", new { id = acc.Id })" class="btn btn-danger btn-block">Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
   

</div>


