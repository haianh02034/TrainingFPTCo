@using Microsoft.AspNetCore.Session;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["title"] = "Dashboard";
    ViewData["breadcrumb"] = "";
    ViewData["breadcrumb_active"] = "";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>

</style>
<div class="custom-background" style="width: 100%; height: 100%">
    <img src="/training/assets/img/pic1.svg" alt="Ảnh" ; style="position: absolute; right: 0; bottom: 0;">
<div class="">
    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("SessionFullname")))
    {
        <div class="row">
           
            <div class="col">
             
                <h1 class="heading">
                    Role :
                    @if (HttpContextAccessor.HttpContext.Session.GetString("SessionRoleId") == "4")
                    {
                        <span class="nav-link role">TRAINING</span>
                    }
                    else if (HttpContextAccessor.HttpContext.Session.GetString("SessionRoleId") == "1")
                    {
                        <span class="nav-link role">Admin</span>
                    }
                    else if (HttpContextAccessor.HttpContext.Session.GetString("SessionRoleId") == "2")
                    {
                        <span class="nav-link role">TRAINER</span>
                    }
                    else if (HttpContextAccessor.HttpContext.Session.GetString("SessionRoleId") == "3")
                    {
                        <span class="nav-link role">TRAINEE</span>
                    }
                    else 
                    {
                        <span class="nav-link role">You have not been granted permission</span>
                    }
                </h1>
            </div>

        </div>


    }
</div>
</div>
